<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    >


    <TextView
        android:id="@+id/userName"
        android:layout_width="305dp"
        android:layout_height="42dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="User name"
        android:textColor="#EDEDED"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999" />


    <CheckBox
        android:id="@+id/genreAction"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:text="Action"
        android:checked="true"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.322" />

    <CheckBox
        android:id="@+id/genreComedy"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:text="Comedy"
        android:checked="true"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.396" />

    <CheckBox
        android:id="@+id/genreFantasy"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:text="Fantasy"
        android:checked="true"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.468" />

    <CheckBox
        android:id="@+id/genreAdventure"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Adventure"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.322" />

    <CheckBox
        android:id="@+id/genreCrime"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Crime"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.658"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.396" />

    <CheckBox
        android:id="@+id/genreThriller"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:text="Thriller"
        android:checked="true"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.658"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.468" />

    <Button
        android:id="@+id/changeButton"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Change settings"
        android:textColor="#EDEDED"
        app:backgroundTint="#56a885"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genreFantasy"
        app:layout_constraintVertical_bias="0.402" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#EDEDED"
        app:backgroundTint="#56a885"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeButton"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which genre do you want to see?"
        android:textColor="#EDEDED"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.263" />


</androidx.constraintlayout.widget.ConstraintLayout>
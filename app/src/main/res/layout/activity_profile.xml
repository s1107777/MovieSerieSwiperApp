<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    >


    <TextView
        android:id="@+id/userName"
        android:layout_width="305dp"
        android:layout_height="42dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="User name"
        android:textColor="#EDEDED"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999" />


    <Button
        android:id="@+id/changeButton"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Change settings"
        android:textColor="#EDEDED"
        app:backgroundTint="#56a885"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genreFantasy"
        app:layout_constraintVertical_bias="0.467" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#EDEDED"
        app:backgroundTint="#56a885"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeButton"
        app:layout_constraintVertical_bias="0.543" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which genre do you want to see?"
        android:textColor="#EDEDED"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.307" />

    <CheckBox
        android:id="@+id/genreCrime"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Crime"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.44" />

    <CheckBox
        android:id="@+id/genreAction"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Action"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.366" />

    <CheckBox
        android:id="@+id/genreFantasy"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Fantasy"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.512" />

    <CheckBox
        android:id="@+id/genreAdventure"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Adventure"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.366" />

    <CheckBox
        android:id="@+id/genreComedy"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Comedy"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.44" />

    <CheckBox
        android:id="@+id/genreThriller"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:buttonTint="#56a885"
        android:checked="true"
        android:text="Thriller"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Series or movies?"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.078" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="140dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.120000005">

        <RadioButton
            android:id="@+id/radioButtonMovies"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:buttonTint="#56a885"
            android:text="Movies"
            android:textColor="#EDEDED" />

        <RadioButton
            android:id="@+id/radioButtonSeries"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:buttonTint="#56a885"
            android:text="Series"
            android:textColor="#EDEDED" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
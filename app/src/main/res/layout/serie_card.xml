<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="525dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="100dp"
    android:background="@drawable/overlay_black"
    app:cardBackgroundColor="#222831"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/serie_image"
        android:layout_width="350dp"
        android:layout_height="291dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="207dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/serie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#EFEFEF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serie_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="85dp"
                android:layout_marginBottom="5dp"
                android:textColor="#707070"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/serie_seasons"
                android:layout_width="85dp"
                android:layout_height="39dp"
                android:layout_marginBottom="5dp"
                android:textColor="#707070"
                android:textSize="14sp"
                android:textStyle="normal" />
        </TableRow>

        <TextView
            android:id="@+id/serie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/left_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_black" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_black">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/top_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_black">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bottom_overlay"
        android:layout_width="match_parent"
        android:layout_height="559dp"
        android:background="@drawable/overlay_black"></FrameLayout>

</androidx.cardview.widget.CardView>